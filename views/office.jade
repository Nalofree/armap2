extends layout
block content
  #content
    // Карточка объекта
    #object.container
      article#obj-description
        #breadcrumbs
          a(href='/') Поиск
          //-span >
          //-a(href='#') Результаты поиска
          span >
          a.active(href='#')= office.office_name + ", "+ office.office_area+' м'
            sup 2
        section#obj-header
          section
            - var name = office.office_name
            h2= name
            p= office.office_adres
          section.bookmark-trigger(data-title= office.office_id) Добавить в закладки
        // Слайдер
        section#obj-slider.slider-pro
          .sp-slides
            - for (var i = 0; i < images.length; i++)
              .sp-slide                
                .slide-background
                img(src='images/obj/'+images[i].image_filename)                
          .sp-thumbnails
            - for (var i = 0; i < images.length; i++)
              .sp-thumbnail
                img(src='images/obj/'+images[i].image_filename)
        // Информация о цене, площади и заказать звонок
        section#obj-info
          section
            .info-tel
              p
                | Телефон собственника:
                br
                span= office.office_phone
            .info-price
              p
                | Цена за м
                sup 2
                | :
                br
                span= office.office_subprice+' р.'
            .info-square
              p
                | Площадь:
                br
                span= office.office_area+' м'
                  sup 2
            //- .info-social
            //-   p Поделиться:
            //-   a(href='#')
            //-   a(href='#')
            //-   a(href='#')
          section
            button.btn(type='button', data-toggle='modal', data-target='#call-me') Заказать звонок
        // Общая стоимость и прочие характеристики с ебучими точками)
        section#obj-summ
          p
            span Общая стоимость
            span= (office.office_subprice*office.office_area).toFixed(2) + ' р.'
          p
            span Высота потолков
            span= office.office_height == null ? 0+'м' : office.office_height+'м'
        section.obj-service
          div
            h3 В арендную плану входит:
            ul
              - for (var i = 0; i < included.length; i++)
                - var option = included[i].option_name
                li= option
          div
            h3 Доступные провайдеры:
            ul.providers
              div
                - for (var i = 0; i < providers.length; i++)
                  - var option = providers[i].option_name
                  li= '- '+option
        section.obj-service
          div
            h3 Дополнительные услуги:
            ul
              - for (var i = 0; i < advanced.length; i++)
                - var option = advanced[i].option_name
                li= option
        section
          p
            | Вернуться в 
            a(href='/') ПОИСК
